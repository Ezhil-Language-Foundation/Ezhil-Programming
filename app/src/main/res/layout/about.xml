<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:background="#362d2e"
            android:layout_height="30dp"
            android:textColor="#FFFFFF"
            android:id="@+id/developername"
            android:text="@string/developerdetais"
            android:textSize="17dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:textColor="#413e3e"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/developername"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:textColor="#413e3e"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/college"
            android:textSize="18dp"
            android:layout_marginTop="80dp"
            />
        <TextView
            android:textColor="#413e3e"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="@string/place"
            android:textSize="18dp"
            android:layout_marginTop="127dp"
            />
        <TextView
            android:textColor="#413e3e"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/email"
            android:textSize="18dp"
            android:layout_marginTop="150dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_marginTop="180dp"
            android:text="@string/Ezhilweb"
            android:textColor="#FFFFFF"
            android:background="#362d2e"/>
        <TextView
            android:id="@+id/website"
            android:layout_width="200dp"
            android:layout_height="37dp"
            android:text="@string/EzhilSite"
            android:textSize="20dp"
            android:layout_marginTop="218dp"
            android:textColor="#0949af"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_marginTop="260dp"
            android:text="@string/Ezhilblog"
            android:textColor="#FFFFFF"
            android:background="#362d2e"/>
        <TextView
            android:id="@+id/blog"
            android:layout_width="320dp"
            android:layout_height="37dp"
            android:text="@string/Ezhilblogsite"
            android:textSize="20dp"
            android:layout_marginTop="300dp"
            android:textColor="#0949af"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_marginTop="340dp"
            android:text="@string/EzhilSource"
            android:textColor="#FFFFFF"
            android:background="#362d2e"/>
        <TextView
            android:textColor="#413e3e"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/EzhilSourcedesc"
            android:textSize="15dp"
            android:layout_marginTop="370dp"
            />
        <TextView
            android:id="@+id/source"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/Ezhilgit"
            android:textSize="15dp"
            android:layout_marginTop="445dp"
            android:textColor="#0949af"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_marginTop="495dp"
            android:text="@string/license"
            android:textColor="#FFFFFF"
            android:background="#362d2e"/>
        <TextView
            android:id="@+id/licensedesc"
            android:textColor="#413e3e"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/licensedesc"
            android:textSize="15dp"
            android:layout_marginTop="530dp"
            />
        <TextView
            android:id="@+id/license"
            android:textColor="#0949af"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/licensetext"
            android:textSize="15dp"
            android:paddingTop="8dp"
            android:layout_below="@+id/licensedesc"
            />
        <TextView
            android:textColor="#413e3e"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/Appsourcedesc"
            android:textSize="15dp"
            android:padding="8dp"
            android:id="@+id/appsourcedesc"
            android:layout_below="@+id/license"
            />
        <TextView
            android:layout_below="@+id/appsourcedesc"
            android:textColor="#0949af"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/Appsourcegit"
            android:textSize="14dp"
            android:id="@+id/appsource"
            android:paddingTop="8dp"
            />
    </RelativeLayout>
</ScrollView>